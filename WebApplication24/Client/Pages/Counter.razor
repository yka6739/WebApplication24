@page "/counter"
@inject SingletonServices singleton

@inject TransientServices transient



<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Singleton Value is: @singleton.value     </p>
<p>Transient Value is: @transient.value</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;


    private void IncrementCount()
    {
       
        currentCount++;
        singleton.value += 1;
        transient.value += 1;

    }
}
